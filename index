    <button class="config-btn" onclick="toggleModal()">
        <i class="fas fa-cog"></i>
    </button>

    <div class="modal" id="settingsModal">
        <div class="modal-content">
            <h3>Pengaturan Portal</h3>
            <label style="font-size: 0.8rem; color: #94a3b8; display: block; margin-bottom: 8px;">URL Web App Google
                Apps Script:</label>
            <input type="text" id="gasUrl"
                value="https://script.google.com/a/macros/guru.smk.belajar.id/s/AKfycbzH7bJFxW3Jzu8efeurqA2Xdccbz_tPWtQ-TX9pgE6T50UcfUdbiBIW7-V-rrhrmXPR/exec">
            <button class="save-btn" onclick="saveConfig()">Simpan Konfigurasi</button>
            <button onclick="toggleModal()"
                style="margin-top:10px; background:transparent; border:none; color:#94a3b8; cursor:pointer; width:100%;">Tutup</button>
        </div>
    </div>

    <script>
        // URL Permanen (Sesuai yang Anda tempel tadi)
        const DEFAULT_URL = "https://script.google.com/a/macros/guru.smk.belajar.id/s/AKfycbzH7bJFxW3Jzu8efeurqA2Xdccbz_tPWtQ-TX9pgE6T50UcfUdbiBIW7-V-rrhrmXPR/exec";

        window.onload = function () {
            const savedUrl = localStorage.getItem('app_scrip_url');
            if (savedUrl) {
                document.getElementById('gasUrl').value = savedUrl;
            } else {
                document.getElementById('gasUrl').value = DEFAULT_URL;
                localStorage.setItem('app_scrip_url', DEFAULT_URL);
            }
        };

        function toggleModal() {
            document.getElementById('settingsModal').classList.toggle('active');
        }

        function saveConfig() {
            const url = document.getElementById('gasUrl').value.trim();
            if (url) {
                localStorage.setItem('app_scrip_url', url);
                alert('Konfigurasi Berhasil Disimpan!');
                toggleModal();
            } else {
                alert('Tolong masukkan URL yang valid');
            }
        }

        function enterApp() {
            const url = localStorage.getItem('app_scrip_url') || DEFAULT_URL;
            if (url) {
                window.location.href = url;
            } else {
                alert('Silakan masukkan URL Apps Script di menu Pengaturan.');
                toggleModal();
            }
        }
    </script>
